---
import { Icon } from "astro-icon/components";
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"a"> & {
  label: string;
  icon?: string;
  isUnderline?: boolean;
};

const { label, icon, isUnderline, ...props } = Astro.props;
---

<a
  href={props.href}
  class:list={{
    ["hover:text-teal-500 cursor-pointer transition duration-300 ease-in-out"]: true,
    ["text-white"]: isUnderline,
  }}
  {...props}
  rel="noreferrer"
  target="_blank"
>
  {icon && <Icon name={icon} class="size-7" />}
  <span class="sr-only">{label} link</span>
</a>
